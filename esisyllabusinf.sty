\newcommand{\setca}[2]{\def\@ca@prc{#2\%}\def\@ca@cmt{#1}}
\newcommand{\setpr}[2]{\def\@pr@prc{#2\%}\def\@pr@cmt{#1}}
\newcommand{\setfe}[2]{\def\@fe@prc{#2\%}\def\@fe@cmt{#1}}
\newcommand{\setme}[2]{\def\@me@prc{#2\%}\def\@me@cmt{#1}}

\newcommand{\setvolume}[3]{
	\def\@lect@volume{#1}
	\def\@tuto@volume{#2}
	\def\@prac@volume{#3}
