% summs the values of 3 float numbers
\newcommand{\floatssumthree}[3]{\expandafter\strip@pt\dimexpr#3pt+#2pt+#1pt\relax}

% summs the values of 2 float numbers
\newcommand{\floatssumtwo}[2]{\expandafter\strip@pt\dimexpr#2pt+#1pt\relax}

